<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TcpClientApp.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="5">
            <Label x:Name="IsConnectedField"/>
            <Label Text="Address:"/>
            <Entry x:Name="AddressField" Text="0.0.0.0"/>
            
            <Label Text="Port:"/>
            <Entry x:Name="PortField" Text=""/>
            
            <Label Text="Auth:"></Label>
            <Switch x:Name="AuthSwitch" IsToggled="True"></Switch>
            
            <Button Text="Connect" Clicked="Button_OnClicked"/>

            <Button Text="Send Message" Clicked="Button2_OnClicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
