<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CustomDrawing.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CustomDrawing">



    <Grid RowDefinitions="200, Auto">
        <local:DrawingBox x:Name="BoxDrawing" Grid.Row="0">
            <local:DrawingBox.ContainerBackground>
                <SolidColorBrush Color="Green" />
            </local:DrawingBox.ContainerBackground>
        </local:DrawingBox>
        <Button Grid.Row="1" Text="Update Background" Clicked="Button_OnClicked" />
    </Grid>
</ContentPage>
