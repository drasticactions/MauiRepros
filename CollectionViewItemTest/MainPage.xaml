<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollectionViewItemTest.MainPage">

    <Grid RowDefinitions="*, Auto" RowSpacing="10">
        <CollectionView x:Name="TestCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label HorizontalOptions="Center" VerticalOptions="Center" Text="{Binding .}"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Grid.Row="1" Text="Test" Clicked="Button_OnClicked"></Button>
    </Grid>

</ContentPage>
