<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maui="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Compat.Maui"
             xmlns:transformations="clr-namespace:FFImageLoading.Transformations;assembly=FFImageLoading.Compat.Transformations"
             x:Class="MauiHRBenchmarks.SpinningImagePage">
    <ContentPage.Content>
        <maui:CachedImage   
            x:Name="CoverImage"
            Grid.Row="0"
            Aspect="AspectFit"
            Source="dotnet_bot.png" 
            Margin="30">
            <maui:CachedImage.Transformations>
                <transformations:CircleTransformation />
            </maui:CachedImage.Transformations>
        </maui:CachedImage>
    </ContentPage.Content>
</ContentPage>