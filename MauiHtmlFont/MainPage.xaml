<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiHtmlFont.MainPage">
    <ContentPage.Resources>
        <Style x:Key="PrimaryStyle"
               TargetType="Label">
            <Setter Property="FontSize" Value="22" />
            <Setter Property="TextColor" Value="MediumPurple" />
        </Style>
    </ContentPage.Resources>
    <ScrollView>
        <Label Style="{StaticResource PrimaryStyle}" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" TextType="Html">
            <Label.Text>
                <![CDATA[
            <strong>Bold Text</strong><br>
            <em>italics</em><br>
            <ul>
              <li>Item 1</li>
              <li>Item 2</li>
            </ul>
        ]]>
            </Label.Text>
        </Label>
    </ScrollView>

</ContentPage>
